@model LoginViewModel
@{
    String returnUrl = this.Context.Request.Query["returnUrl"].ToString();
    this.ViewData["Title"] = "Log in";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>

    <hr />
    
    <div class="row">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="@this.Model.UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="@this.Model.UserName" class="form-label"></label>
                    <span asp-validation-for="@this.Model.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="@this.Model.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@this.Model.Password" class="form-label"></label>
                    <span asp-validation-for="@this.Model.Password" class="text-danger"></span>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="@this.Model.IsPersistent" class="form-label">
                            <input class="form-check-input" asp-for="@this.Model.IsPersistent" />
                            @this.Html.DisplayNameFor(m => m.IsPersistent)
                        </label>
                    </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div>
                    <p><a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnUrl="@returnUrl">Whoops, I forgot my password!</a></p>
                    <p><a asp-controller="User" asp-action="Create" asp-route-returnUrl="@returnUrl">Create account</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
