@model Post
@{
    this.ViewData["Title"] = "Create post";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>

    <hr />
    
    <div class="row">
        <section>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="@this.Model.Content" class="form-control" aria-required="true" />
                    <label asp-for="@this.Model.Content" class="form-label"></label>
                    <span asp-validation-for="@this.Model.Content" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Create post</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
